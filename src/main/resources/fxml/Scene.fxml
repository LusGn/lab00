<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.Lab00.FXMLController">
   <top>
      <Label text="Inserire Nome e Password" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="196.0" prefWidth="462.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Nome" />
            <TextField fx:id="txtNome">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Password" />
            <TextField fx:id="txtPass">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="btnAccedi" mnemonicParsing="false" onAction="#premi" text="Accedi">
               <VBox.margin>
                  <Insets left="8.0" top="6.0" />
               </VBox.margin>
            </Button>
            <TextField fx:id="risultato" disable="true" minHeight="-Infinity" minWidth="-Infinity" />
            <Button fx:id="btnclear" mnemonicParsing="false" onAction="#btnclean" prefHeight="22.0" prefWidth="44.0" text="clear">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
